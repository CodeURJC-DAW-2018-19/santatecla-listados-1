{{>header}}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <!-- FIRST CARD: ITEMS-->
                <div class="card">
                    <div class="card-header card-header-primary ">
                        <h4 class="card-title">URL</h4>
                        <p class="card-category">
                            <a href="http:\www.urlcdelconcepto.com">http:\www.urlcdelconcepto.com</a>
                        </p>
                    </div>
                    <div class="card-body">

                        <h3>ÍTEMS</h3>
                        <div class="table-responsive">
                            <table class="table">

                                <tbody>
                                <!-- CORRECT ITEMS -->
                                {{#items}}
                                    <tr>
                                        <td>
                                            <h5>{{info}}</h5>
                                        </td>
                                        <td>
                                            <div class="form-check form-check-radio form-check-inline">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="radio"
                                                           name={{idItem}}
                                                           id={{idItem}}
                                                           value="option1" {{#state}}checked{{/state}} {{^state}}disabled{{/state}}>
                                                    Correct
                                                    <span class="circle" style=" border-color: #ad9df5">
                                                        <span class="check"></span>
                                                    </span>
                                                </label>
                                            </div>
                                            <div class="form-check form-check-radio form-check-inline">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" type="radio"
                                                           name={{idItem}}
                                                           id={{idItem}}
                                                           value="option2" {{#state}}disabled{{/state}} {{^state}}checked{{/state}}>
                                                    Incorrect
                                                    <span class="circle">
                                                  <span class="check"></span>
                                             </span>
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-primary btn-round">
                                                <i class="material-icons">delete</i>
                                            </button>
                                            </label>
                                        </td>
                                    </tr>

                                {{/items}}


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END FIRST CARD: ÍTEMS -->

        <!-- FUNCTION: ADD ÍTEM -->
        <div class="row">
            <div class="content">
                <button type="button" class="material-icons" data-toggle="modal"
                        data-target="#exampleModal">
                    add_circle_outline
                </button>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Add ítem</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close
                                </button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END FUNCTION: ADD ÍTEM -->
        <!-- START UNCORRECTED CUESTION-->
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h3>PENDING ANSWERS</h3>
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                {{#questions}}
                                    {{#setAnswer}}
                                        {{^correct}}
                                            <tr>
                                                <td>
                                                    <b>{{toString}}</b>
                                                </td>
                                                <td>
                                                    <div class="form-check form-check-radio form-check-inline">
                                                        <label class="form-check-label">
                                                            <input class="form-check-input" type="radio"
                                                                   name="RB_Answer1"
                                                                   id="inlineRadioRC1" value="option1"> Correct
                                                            <span class="circle">
                                        <span class="check"></span>
                                    </span>
                                                        </label>
                                                    </div>
                                                    <div class="form-check form-check-radio form-check-inline">
                                                        <label class="form-check-label">
                                                            <input class="form-check-input" type="radio"
                                                                   name="RB_Answer1"
                                                                   id="inlineRadioRI1" value="option2"> Incorrect
                                                            <span class="circle">
                                         <span class="check"></span>
                                    </span>
                                                        </label>
                                                    </div>
                                            </tr>
                                        {{/correct}}
                                    {{/setAnswer}}
                                {{/questions}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{{>footer}}