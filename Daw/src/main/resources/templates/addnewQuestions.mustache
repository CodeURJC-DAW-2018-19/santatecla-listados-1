         aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <table class="table">
                        <thead>
                        <tr>
                            <th class="text-center">{{#question}}{{info}}{{/question}}</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>
                                <div class="form-check form-check-radio">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="radio" name="textQuestion" id="textQuestion"
                                               value="Correct">
                                        Correcta
                                        <span class="circle">
                                                <span class="check"></span>
                                            </span>
                                    </label>
                                </div>
