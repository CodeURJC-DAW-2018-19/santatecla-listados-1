                                        <input class="form-check-input" type="radio" name="textQuestion" id="textQuestion"
                                               value="Incorrect">
                                        Incorrecta
                                        <span class="circle">
                                                <span class="check"></span>
                                            </span>
                                    </label>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Modal body -->

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="addAnswer(1)">Enviar respuesta</button>
                </div>

            </div>
        </div>
    </div>
