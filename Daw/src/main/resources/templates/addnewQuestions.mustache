
<!-- MODAL TIPO 0-->
{{#question0}}
    <div class="modal" id="addQuestion" tabindex="-1" role="dialog" aria-labelledby="addQuestion">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addQuestionHead">{{#question}}{{info}}{{/question}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/saveAnswer/{{#question}}{{idQuestion}}{{/question}}" method="post">
                        <div class="form-group">
                            <label for="title">Respuesta</label>
                            <input type="text" id="info" name="info"
                                   {{#answer}}value="{{info}}"{{/answer}} class="form-control"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar tema</button>
                        <input type="hidden" name="_csrf" value="{{token}}"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
{{/question0}}
<!-- END MODAL TIPO 0 -->
