{{>header}}
<form action="/add" method="post">

    <h1>SIGN IN</h1>
    <div class="card-body">
        <div class="form-group bmd-form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="material-icons">face</i></div>
                </div>
                {{#user}}<input type="text" id="name" value="{{name}}" name="name" class="form-control"/>{{/user}}
            </div>
        </div>

        <div class="form-group bmd-form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="material-icons">lock_outline</i></div>
                </div>
                {{#user}}<input type="password" id="password" value="password" name="password" class="form-control"/><br>{{/user}}
            </div>
        </div>

        <div class="form-group bmd-form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="material-icons">email</i></div>
                </div>
                <input type="text" id="email" name="email" class="form-control"/>
            </div>
        </div>

        <div class="form-group col-md-3">
            <label for="inputState">ROLE</label>
            <select id="role" class="form-control">
                <option>ROLE_STUDENT</option>
                <option>ROLE_TEACHER</option>
            </select>
        </div>

        <div class="modal-footer justify-content-center">
            <input type='submit' value='Enviar'>

        </div>
    </div>
</form>
{{>footer}}